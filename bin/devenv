#!/bin/bash

set -e

# vagrant up

SCRIPT_HOME="$( cd "$( dirname "$0" )" && pwd )"

cd $SCRIPT_HOME/..

case "$1" in
	ssh)
		vagrant ssh
		;;
	up)
		vagrant up
		;;
	install)
		git pull
		vagrant ssh -c "sudo /vagrant/bin/devenv-inner.sh install"
		;;
	update)
		git pull
		vagrant ssh -c "sudo /vagrant/bin/devenv-inner.sh update"
		;;
	*)
		vagrant ssh -c "sudo /vagrant/bin/devenv-inner.sh $1"
		;;
esac

cd - > /dev/null

